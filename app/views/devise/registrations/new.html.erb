<%= render "devise/shared/error_messages", resource: resource %>
  <div class="container-fluid">
    <div class="d-flex justify-content-center">
        <div class="rounded-3">
          <div class="p-4 p-md-5">
            <div class="d-flex justify-content-center">
              <h2 class="signup-heading">Sign up</h2>
            </div>
            <br>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="mb-3">
                <%= f.email_field :email, placeholder: "Email", class: "form-control", autocomplete: "email" %>
              </div>
              <div class="mb-3">
                <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "new-password" %>
              </div>
              <div class="mb-3">
                <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control", autocomplete: "new-password" %>
              </div>
              <div class="mb-3 field d-flex justify-content-center">
                <%#= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
              </div>
              <div class="mb-3 actions d-flex justify-content-center">
                <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
              </div>
              <div class="text-center ">Already have an account? <a href="http://localhost:3000/users/sign_in">Login here</a></div>
            <% end %>
          </div>
        </div>
    </div>
  <%#= render "devise/shared/links" %>
  </div>























